# ===========================================
# AdSim Lab - Environment Variables Template
# ===========================================
# Copy this file to .env and fill in values

# -----------------------------
# Database (PostgreSQL)
# -----------------------------
POSTGRES_USER=adsim
POSTGRES_PASSWORD=adsim_dev_password
POSTGRES_DB=adsim
POSTGRES_PORT=5432

# Full connection string (used by API/Worker)
DATABASE_URL=postgresql://adsim:adsim_dev_password@localhost:5432/adsim

# -----------------------------
# Redis (Celery Broker)
# -----------------------------
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0

# -----------------------------
# API Configuration
# -----------------------------
API_PORT=8000
SECRET_KEY=dev-secret-key-change-in-production
DEBUG=true
CORS_ORIGINS=http://localhost:3000

# JWT Settings
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# -----------------------------
# Frontend Configuration
# -----------------------------
WEB_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:8000

# -----------------------------
# Simulation Defaults
# -----------------------------
DEFAULT_SIMULATION_DAYS=30
MAX_SIMULATION_DAYS=365

# -----------------------------
# Celery Worker Settings
# -----------------------------
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1
